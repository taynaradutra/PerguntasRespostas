<%- include('./partials/header.ejs') %>
<body>

    <%- include('./partials/navbar.ejs') %>
    
    <div class="container">

        <div class="card" id="cardTop">
            <div class="card-header" >
                <h3>Realizar perguntas</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarpergunta"> 
                    <div class="form-group">
                        <label>Título:</label>
                        <input type="text" class="form-control" name="titulo" placeholder="Informe o título da pergunta"/>
                    </div>
                    <div class="form-group">
                        <label for="descricao">Descrição:</label>
                        <textarea class="form-control" name="descricao" id="descricao"
                            placeholder="Descreva sua pergunta aqui"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</body>
